<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tr.firefighters.hobilandgelecegiyazanlar.Fragments.ChatFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/button_newChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_login_selector"
                android:text="@string/new_chat"
                android:textColor="@color/custom_button_text" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView_chats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="54dp" />
    </RelativeLayout>

</FrameLayout>
